<UserControl x:Class="WPF_Desktop.Component.PersonaDataComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DesignHeight="*" d:DesignWidth="*"
             xmlns:local="clr-namespace:WPF_Desktop.Components">
    <Border Background="AliceBlue"
            BorderBrush="Gray"
            BorderThickness="2">
        <StackPanel Grid.Row="1">
            <Label Content="Persona"
       Style="{ StaticResource Form }"/>
            <TextBlock Text="{ Binding PersonaResponse.NombreCompleto, UpdateSourceTrigger=PropertyChanged }"
           IsEnabled="False"
           Style="{ StaticResource TextBlock }"/>

        </StackPanel>
    </Border>
    
</UserControl>
