<UserControl x:Class="WPF_Desktop.View.LabelTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Desktop.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="WhiteSmoke" BorderThickness="1" CornerRadius="4">
        <StackPanel Orientation="Vertical">
            <Label Content="Apellido"
                   FontSize="16"
                   Margin="10 5 10 5"/>
            <TextBox Style="{ StaticResource TextBox }"></TextBox>
        </StackPanel>
    </Border>
    
</UserControl>
